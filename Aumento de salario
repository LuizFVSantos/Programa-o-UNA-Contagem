import java.util.Scanner;
import java.io.*;

class Main {
  public static void main(String[] args) {
     double salarioi, aumento, salariof;    
		Scanner ler = new 
    Scanner(System.in);
	System.out.println("Digite o valor do salario: ");
	salarioi = ler.nextDouble();
	System.out.println("Digite o valor em porcentagem do aumento: ");
	aumento = ler.nextDouble();
	salariof = salarioi + ((salarioi*aumento)/100);
	System.out.print("Seu salario atual Ã© " + salariof);
	}
}
